.track
  margin-bottom 10px
  &:after
    clear both
    content " "
    display block
    font-size 0
    height 0
    visibility hidden
.track-artwork-container
  float left
.track-controls-container
  margin 0 0 5px 105px
.play,.pause
  background orange
  color #eee
  font-family 'apis'
  &:hover
    color #fff
.play:before
  content "\e60a"
.pause:before
  content "\e60b"