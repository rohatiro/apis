*,*::after,*::before
	box-sizing border-box
@font-face
	font-family 'apis'
	src url('../fonts/apis.eot?-t23tiw')
	src url('../fonts/apis.eot?#iefix-t23tiw') format('embedded-opentype'),url('../fonts/apis.woff?-t23tiw') format('woff'),url('../fonts/apis.ttf?-t23tiw') format('truetype'),url('../fonts/apis.svg?-t23tiw#apis') format('svg')
	font-weight normal
	font-style normal
html
	font-size 16px
	font-family sans-serif
.soundcloud__title
	display block
	background-color #005353
	margin-bottom 1rem
.soundcloud__title__text
	color #eee
	display inline-block
	font-size 2rem
	font-weight bold
	margin 0
	padding-bottom 0.6rem
	padding-left 0.9rem
	padding-right 0.9rem
	padding-top 0.6rem
	text-decoration none
.soundcloud__article
	position relative
	margin-bottom 1rem
.soundcloud__article__description
	border-bottom 1px
	border-bottom-color #ddd
	border-left 0
	border-left-color #ddd
	border-right 0
	border-right-color #ddd
	border-style solid
	border-top 0
	border-top-color #ddd
	margin 0
	padding 1rem 0.5rem
.soundcloud__article__title
	background-color #764b06
	color #eee
	font-size 1.2rem
	font-weight bold
	padding 0.2rem 0.5rem
.soundcloud__article__title__text
	bottom 0
	left 0
	position absolute
	right 0
	top 0
.soundcloud__login
	margin-top 0
	margin-bottom 1rem
	text-align center
.soundcloud__login__button
	background-color #fd6f01
	color #eee
	display inline-block
	font-size 1rem
	font-weight bold
	padding 0.5rem 0.8rem
	text-decoration none
	&:hover
		text-decoration underline
	&::before
		content "\e614"
		font-family "apis"
		padding-right 0.4rem
.soundcloud__login__message
	display block
	font-size 1.1rem
	margin-bottom 1rem
	text-align left
.soundcloud__favorites__song
	margin-bottom 1rem
	position relative
	&:after
		clear both
		display table
		content " "
.soundcloud__favorites__song__img
	float left
	height 6.25rem
	margin-right 0.3rem
	width 6.25rem
.soundcloud__favorites__song__title
	color #333
	text-decoration none
.soundcloud__favorites__song__user
	color #333
	font-size 0.7rem
	padding-left 1rem
.soundcloud__favorites__song__duration
	background-color rgba(100,100,100,.5)
	color #eee
	display inline-block
	font-size 0.7rem
	font-weight bold
	left 3rem
	padding 0.4rem 0.5rem
	position absolute
	top 4.7rem
.soundcloud__player
	position relative
.soundcloud__player__title
	margin-top 0
	margin-bottom 1rem
	font-size 1.4rem
	font-weight bold
	display block
.soundcloud__player__canvas
	height 18.75rem
	width 100%
.soundcloud__player__duration
	bottom 0
	position absolute
	right 0