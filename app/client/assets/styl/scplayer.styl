#player
  margin-bottom 15px
#playlist
  border 1px solid #ddd
  margin-bottom 15px
  padding-top 15px
  .track
    .delete
      background-color #eee
      border-bottom 1px solid #ddd
      border-left 1px solid #ddd
      cursor pointer
      display none
      font-family 'apis'
      font-size 0.7em
      padding 5px
      position absolute
      right 0
      top 0
      &:before
        content "\e604"
    &:hover
      .delete
        display block
    &.played
      background-color #34d124
      color #eee
  .tracks
    padding-top 10px
.tabs-container
  border-bottom 1px solid #ddd
  border-left 1px solid #ddd
  border-right 1px solid #ddd
  padding-top 15px
.tab-label
  display block
  padding 10px 15px
  text-align center
.track
  background-color #fefefe
  border 1px solid #ddd
  margin 0 10px 10px 10px
  position relative
  &:after
    clear both
    content " "
    display block
    font-size 0
    height 0
    visibility hidden
.track-artwork-container
  float left
  width 50px
.track-artwork-img
  width 100%
.track-container
  margin 0 0 5px 20px
.track-dragcontoler
  background-color #ddd
  bottom 0
  position absolute
  top 0
  width 20px
.track-info-container
  margin 0 0 5px 55px
.track-music-icon
  background-color #a2a2a2
  display block
  float left
  font-family apis
  font-size 1.5em
  padding 10px 14.5px
  &:before
    content "\e601"